<IfModule mod_rewrite.c>
    # Disable directory browsing
    Options All -Indexes
    Options -MultiViews

    # Increase PHP upload limits
    php_value upload_max_filesize 4000M
    php_value post_max_size 4000M
    php_value max_execution_time 12000
    php_value max_input_time 6000

    RewriteEngine on
    RewriteBase /

    # Rewrite URLs for non-existent files or directories to index.php
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-l
    RewriteRule ^(.+)$ index.php/?url=$1 [L,QSA]
</IfModule>

<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"

    # Uncomment the following lines if needed for Content-Security-Policy
    #Header set Content-Security-Policy "default-src 'self'; base-uri 'none'; style-src 'self' 'unsafe-hashes' 'sha256-nMxMqdZhkHxz5vAuW/PAoLvECzzsmeAxD/BNwG15HuA=' https://fonts.googleapis.com; form-action 'self'; frame-ancestors 'none'"
    #Header set Content-Security-Policy-Report-Only: default-src 'self'; report-uri 'your_csp_report_parser.json;'

    # Enable XSS Protection
    Header set X-XSS-Protection "1; mode=block"

    # Enable Clickjacking Prevention
    Header set X-Frame-Options "SAMEORIGIN"

    # Force HTTPS connections (Uncomment if needed)
    #Header always set Strict-Transport-Security "max-age=63072000; includeSubDomains"

    # Uncomment the following line if you want to specify a CSP policy
    #Header set Content-Security-Policy "default-src 'self'; child-src 'self'; object-src 'none'"
</IfModule>

# Log Apache errors to logs/apache/error if it exists
